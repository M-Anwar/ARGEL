extends layout

block content
    section.content.content-2      
      .mbr-section__container.container      
        .row.animated.fadeInUp   
            .col-sm-12.text-white
                h1 User Database                                  
                .alert.alert-success(role='alert') Here, you can find the list of users and corresponding emails
                #displayusers.container
                    table.table
                        thead
                            tr
                                th Email
                                th User Name
                                th View User
                                th Delete User
                        tbody
                            each userslist, index in usercollection
                                tr
                                    td= userslist.email
                                    td= userslist.username
                                    td
                                        a.text-white(href="/profile/#{userslist._id}")="view"
                                    td
                                        a.text-white(href="/deleteprofile/#{userslist._id}")="delete"
                                               
