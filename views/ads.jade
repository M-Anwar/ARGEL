extends layout

block content
    section.content.content-2      
      .mbr-section__container.container      
        .row.animated.fadeInUp   
            .col-sm-12.text-white
                h1 Ads Database
                    a.mbr-buttons__link.btn.text-white(href='/aduploadpage') Upload Ad (MOVE this to the right)
                .alert.alert-success(role='alert') Here, you can find the list of ads and corresponding descriptions
                #displayusers.container
                    table.table
                        thead
                            tr
                                th Ad name
                                th Descriptions
                                th Tags
                                th Upload User ID
                                th View Ad
                                th Delete Ad
                        tbody
                            each adslist, index in adscollection
                                tr
                                    td= adslist.adname
                                    td= adslist.description
                                    td= adslist.tags
                                    td= adslist.userid
                                    td
                                        a.text-white(href="/adprofile/#{adslist._id}")="view"
                                    td
                                        a.text-white(href="/deleteadprofile/#{adslist._id}")="delete"
                                    

