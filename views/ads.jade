extends layout

block content
    section.content.content-2      
      .mbr-section__container.container      
        .row.animated.fadeInUp   
            .col-sm-12.text-white
                h1 Ads Database                                   
                .alert.alert-success(role='alert') Here, you can find the list of ads and corresponding descriptions
                #displayusers.container
                    table.table
                        thead
                            tr
                                th Ad name
                                th Descriptions
                                th Tags
                                th View Ad
                                th Delete Ad
                        tbody
                            each adslist, index in adscollection
                                tr
                                    td= adslist.email
                                    td= adslist.username
                                    td= adslist.tags
                                    td
                                        a(href="/profile/#{adslist._id}")="view"
                                    td
                                        a(href="/deleteprofile/#{adslist._id}")="delete"
                                    

